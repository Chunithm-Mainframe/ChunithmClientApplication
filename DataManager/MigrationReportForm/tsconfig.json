{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es6" ],
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(test/.+(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "jsx",
      "json",
      "node"
    ]
  }
}
